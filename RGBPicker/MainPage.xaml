<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RGBPicker.MainPage">

    <Grid ColumnDefinitions="5*,*" RowDefinitions="*,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10" Padding="25">
        <Rectangle x:Name="Rectangle" Grid.ColumnSpan="2" Fill="Silver"></Rectangle>
        <Slider x:Name="SliderRed" Grid.Row="1" ValueChanged="Slider_ValueChanged"></Slider>
        <Label Grid.Column="1" Grid.Row="1" Text="Czerwony" TextColor="Red" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
        <Slider x:Name="SliderGreen" Grid.Row="2" ValueChanged="Slider_ValueChanged"></Slider>
        <Label Grid.Column="1" Grid.Row="2" Text="Zielony" TextColor="Green" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
        <Slider x:Name="SliderBlue" Grid.Row="3" ValueChanged="Slider_ValueChanged"></Slider>
        <Label Grid.Column="1" Grid.Row="3" Text="Niebieski" TextColor="Blue" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"></Label>
    </Grid>

</ContentPage>